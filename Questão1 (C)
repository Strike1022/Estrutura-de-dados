#include <stdio.h>

int main() {
  
  printf("Bem vindo ao conversor de dólar!\n");
  
    // Declaração das variáveis
    float valor_em_reais, cotacao_dolar, valor_em_dolares;

    // Passo 1: Solicitar o valor em reais
    printf("Digite o valor em reais (BRL): ");
    scanf("%f", &valor_em_reais);

    // Passo 2: Solicitar a cotação do dólar
    printf("Digite a cotação do dólar (USD): ");
    scanf("%f", &cotacao_dolar);

    // Passo 3: Calcular o valor em dólares
    valor_em_dolares = valor_em_reais / cotacao_dolar;

    // Passo 4: Exibir o resultado
    printf("O valor correspondente em dólares é: %.2f USD\n", valor_em_dolares);

    return 0; // Fim do programa
}
